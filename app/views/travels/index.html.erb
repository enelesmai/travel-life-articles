<div class="portrait">
    <% if @featured_traveling_article.nil? %>
        <h2>There is no articles</h2>
    <% else %>
        <h2><%= @featured_traveling_article.title%></h2>
    <% end %>
</div>
<div class="feautured_container">
    <% if @list_of_categories.count.zero? %>
        <% 4.times do %>
            <div class="featured_box">
                <b>Category Name</b>
                <span>Title<span>
            </div>
        <% end %>
    <% else %>
        <% @list_of_categories.each do |item| %>
            <div class="featured_box">
                <b><%= link_to item.name, category_path(item.id) %></b>
                <span><%= link_to item.travels.first.title, travel_path(item.travels.first.id) %><span>
            </div>
        <% end %>
    <%end%>
</div>